includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon
    - vendor/phpstan/phpstan-phpunit/rules.neon

parameters:
    excludes_analyse:
        - tests/lib/Stubs/Legacy/

    ignoreErrors:
        # eZ Platform Site API v2/v3 differences
        - '#Netgen\\EzPlatformSiteApi\\API\\Values\\Node#'

        # Disable errors about missing value types in Site API stubs

        - '#return type has no value type specified in iterable type (Pagerfanta\\Pagerfanta|iterable)#'
        - '#has parameter \$contentTypeIdentifiers with no value type specified in iterable type array.#'
