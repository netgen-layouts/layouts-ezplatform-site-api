{
    "name": "netgen/block-manager-site-api",
    "description": "Netgen Block Manager & eZ Platform Site API integration",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://www.netgenlabs.com"
        }
    ],
    "require": {
        "netgen/block-manager-ezpublish": "~0.11.0",
        "netgen/content-browser": "~0.11.0",
        "netgen/ezplatform-site-api": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^7.1",
        "symfony/phpunit-bridge": "^4.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.2 || ^3.0",
        "matthiasnoback/symfony-config-test": "^2.2 || ^4.0",
        "franzl/studio": "*"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always"
    },
    "repositories": [
        { "type": "composer", "url": "https://packagist.netgen.biz" }
    ],
    "autoload": {
        "psr-4": {
            "Netgen\\BlockManager\\SiteAPI\\": "lib/",
            "Netgen\\Bundle\\SiteAPIBlockManagerBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "files": [
            "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php"
        ],
        "psr-4": {
            "Netgen\\BlockManager\\SiteAPI\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\SiteAPIBlockManagerBundle\\Tests\\": "tests/bundle/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.11.x-dev"
        }
    }
}
