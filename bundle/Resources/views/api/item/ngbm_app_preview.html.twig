{% if content.fields.image is defined and not content.fields.image.empty %}
    {% set image_alias = ng_image_alias(content.fields.image, 'ngbm_app_preview') %}

    {% if image_alias %}
        <div class="image">
            <img src="{{ asset(image_alias.uri) }}" />
        </div>
    {% endif %}
{% endif %}

<div class="name">
    <p><a href="{{ ngbm_item_path(ngbm_item) }}" target="_blank">{{ content.name }}</a></p>
</div>
